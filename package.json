{
    "name": "@plark/wallet-core",
    "version": "0.6.15",
    "description": "Plark Wallet Core for work with common cryptocurrencies like Bitcoin, Ethereum, Dash, Litecoin",
    "keywords": [
        "bitcoin",
        "litecoin",
        "dash",
        "ethereum",
        "bip32",
        "segwit"
    ],
    "repository": "https://github.com/plark-app/wallet-core",
    "homepage": "https://plark.io?ref=npm",
    "author": "Plark <info@plark.io>",
    "main": "index.js",
    "types": "lib/index.d.ts",
    "license": "LGPL-3.0",
    "scripts": {
        "build": "npm run clear && npm run build:rollup && gulp packages",
        "test": "mocha ./test",
        "clear": "rm -rf ./lib",
        "build:rollup": "rollup --config rollup.config.js",
        "tag:patch": "yarn version --new-version patch",
        "tag:minor": "yarn version --new-version minor",
        "publish:alpha": "yarn publish --tag next",
        "coverage": "nyc --check-coverage --branches 90 --functions 90 --lines 90 mocha ./test"
    },
    "dependencies": {
        "add": "2.0.6",
        "axios": "0.19.0",
