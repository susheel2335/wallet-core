        "bottleneck": "2.19.5",
        "coinselect": "https://github.com/plark-app/coinselect.git",
        "create-hash": "1.2.0",
        "debug": "4.1.1",
        "ethereumjs-tx": "1.3.7",
        "ethereumjs-util": "5.2.0",
        "etherscan-api": "10.0.2",
        "lodash": "4.17.15",
        "queue": "6.0.1",
        "socket.io-client": "2.2.0",
        "wif": "2.0.6"
    },
    "devDependencies": {
