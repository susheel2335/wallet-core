{
    "name": "@plark/wallet-core",
    "version": "0.4.18",
    "description": "Plark Wallet Core for work with common cryptocurrencies like Bitcoin, Ethereum, Dash, Litecoin",
    "keywords": [
        "bitcoin",
        "litecoin",
        "dash",
        "ethereum",
        "bip32",
        "segwit"
    ],
    "repository": "https://github.com/plark/wallet-core",
    "homepage": "https://plark.io",
    "author": "Plark <berry@plark.io>",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "license": "LGPL-3.0",
    "scripts": {
        "build": "npm run clear && npm run build:ts",
        "clear": "rm -rf ./lib",
        "build:ts": "tsc --esModuleInterop",
        "build:gulp": "gulp",
        "test": "mocha -t 5000 --recursive --no-warnings",
        "tag:patch": "yarn version --new-version patch",
        "tag:minor": "yarn version --new-version minor",
        "publish:alpha": "yarn publish --tag next"
    },
