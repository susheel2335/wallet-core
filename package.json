        "bluebird": "3.5.1",
        "bottleneck": "1.16.0",
        "coinselect": "3.1.11",
        "create-hash": "1.2.0",
        "debug": "3.1.0",
        "ethereumjs-tx": "1.3.7",
        "ethereumjs-util": "5.2.0",
        "etherscan-api": "6.0.2",
        "lodash": "4.17.10",
        "queue": "6.0.0",
        "socket.io-client": "2.1.1",
        "wif": "2.0.6"
