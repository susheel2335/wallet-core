        "assert": "1.4.1",
        "babel-core": "6.26.3",
        "babel-loader": "7.1.5",
        "babel-preset-es2015": "6.24.1",
        "gulp": "3.9.1",
        "gulp-flatten": "0.4.0",
        "gulp-json-editor": "2.4.2",
        "istanbul": "0.4.5",
        "jest": "23.5.0",
        "jshint": "2.9.6",
        "mocha": "5.2.0",
        "rollup": "1.2.3",
