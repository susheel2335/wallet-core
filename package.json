        "@types/ethereumjs-util": "5.2.0",
        "@types/jest": "23.3.1",
        "@types/lodash": "4.14.116",
        "@types/socket.io": "1.4.36",
        "@types/socket.io-client": "1.4.32",
        "@warren-bank/ethereumjs-tx-sign": "2.0.0",
        "assert": "2.0.0",
